<h1 class="text-center mt-4">Login</h1>

<div class="container">
    <div class="form-group row justify-content-md-center">
        <div class="col-8 shadow p-5">
            <%= form_with(scope: :session, url: login_path) do |f| %>
                <div class="form-group row">
                    <%= f.label :email %> <br />
                    <%= f.email_field :email, placeholder: 'Enter your email address', class: 'form-control shadow-sm rounded' %>
                </div>

                <div class="form-group row">
                    <%= f.label :password %> <br />
                    <%= f.password_field :password, placeholder: 'Enter your password', class: 'form-control shadow-sm rounded' %>
                </div>

                <div class="form-group row">
                    <%= f.submit('Login', class: 'btn btn-outline-success') %>
                </div>

                <div class="form-group row">
                    <%= link_to 'Cancel and return to @users listing', users_path %>
                </div>
            <% end %>
        </div>
    </div>
</div>